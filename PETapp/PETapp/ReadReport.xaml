<Window x:Class="PETapp.ReadReport"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PETapp"
        mc:Ignorable="d"
        Title="Read Report" Height="450" Width="800">
  <Grid>
    <TextBox x:Name="tbkText" HorizontalAlignment="Left" Height="287" Margin="68,53,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="659"/>
    <Button x:Name="btnCancel" Content="Close" HorizontalAlignment="Left" Margin="652,363,0,0" VerticalAlignment="Top" Width="75" Click="BtnCancel_Click"/>
    <Button x:Name="btnComment" Content="Add Comment" HorizontalAlignment="Left" Margin="68,363,0,0" VerticalAlignment="Top" Width="100" Click="BtnComment_Click"/>
    <Label x:Name="lblAuthor" Content="Label" HorizontalAlignment="Left" Margin="68,22,0,0" VerticalAlignment="Top"/>
    <Label x:Name="lblSubject" Content="Label" HorizontalAlignment="Left" Margin="689,22,0,0" VerticalAlignment="Top"/>

  </Grid>
</Window>
